<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="16dp"
    card_view:cardBackgroundColor="#37EF1818">

    <RelativeLayout
        android:id="@+id/btncard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/name2"
            android:layout_toRightOf="@+id/imagen2"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/rango2"
            android:layout_below="@+id/name2"
            android:layout_alignLeft="@+id/name2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/profesion2"
            android:layout_below="@+id/rango2"
            android:layout_alignLeft="@+id/rango2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/recompensa2"
            android:layout_below="@+id/profesion2"
            android:layout_alignLeft="@+id/profesion2" />

        <LinearLayout
            android:id="@+id/xdd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recompensa2"
            android:layout_alignLeft="@+id/recompensa2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/corona2"
                 />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/crown"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/disponible2"
            android:layout_below="@+id/xdd2"
            android:layout_alignLeft="@+id/xdd2" />
        <ImageView
            android:id="@+id/imagen2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>